---
const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Us' },
  { href: '/services', label: 'Our Services' },
  { href: '/work', label: 'Our Work' },
  { href: '/coverage', label: 'Area of Coverage' },
  { href: '/contact', label: 'Contact' },
];
---
<header class="fixed top-0 inset-x-0 z-50 border-b backdrop-blur" style="border-color:color-mix(in oklab, var(--text) 12%, transparent); background: color-mix(in oklab, var(--bg) 85%, transparent);">
  <nav class="container h-16 flex items-center gap-6">
    <a href="/" class="font-extrabold">Fast Events</a>
    <ul class="hidden md:flex items-center gap-4 text-sm ml-auto">
      {links.map(l => <li><a href={l.href} class="hover:underline">{l.label}</a></li>)}
    </ul>
  </nav>
</header>
