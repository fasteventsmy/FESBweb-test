---
const links = [
  { href: "/",        text: "Home" },
  { href: "/about",   text: "About Us" },
  { href: "/services",text: "Our Services" },
  { href: "/work",    text: "Our Work" },
  { href: "/contact", text: "Contact" },
];
const current = (Astro.url.pathname || "/").replace(/\/+$/,"") || "/";
const isActive = (to)=> (to=== "/" ? current === "/" : current.startsWith(to));
---
<header class="navbar">
  <div class="navwrap">
    <a href="/" aria-label="Home" class="brand">
      <img src="/assets/fast-logo-black.svg" alt="Fast Events" class="logo" loading="eager" decoding="async" />
    </a>
    <nav class="navlinks">
      {links.map(l => (
        <a class={"navbar-link " + (isActive(l.href) ? "is-active" : "")} href={l.href}>{l.text}</a>
      ))}
    </nav>
  </div>
</header>
