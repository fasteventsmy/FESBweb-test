<section id="hero" class="hero hero--concept-a">
  <div class="container hero-shell">
    <img
      src="/assets/fast-logo-white.svg"
      alt="Fast Events"
      class="logo logo--hero"
      width="320"
      height="80"
      decoding="async"
    />

    <p class="eyebrow">Concept-A experiential specialists</p>

    <h1>
      We <span class="hl">accelerate</span> ideas into
      <span class="hl-alt">high-energy reality</span>.
    </h1>

    <p class="lead">
      Production, creative, and operations for bold, memorable brand experiences.
    </p>

    <div class="actions">
      <a class="button button--primary" href="#services">What we do</a>
      <a class="button button--ghost" href="#work">Our work</a>
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--bg);
  }

  .hero-shell {
    position: relative;
    z-index: 1;
    display: grid;
    gap: clamp(1rem, 3vw, 2.5rem);
    justify-items: center;
    padding: clamp(5rem, 16vh, 7rem) 1.25rem clamp(4rem, 12vh, 6rem);
  }

  .hero--concept-a {
    position: relative;
    overflow: hidden;
    color: var(--on-dark);
    text-align: center;
  }

  .hero--concept-a::before,
  .hero--concept-a::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .hero--concept-a::before {
    background: radial-gradient(
        140% 120% at 90% 10%,
        rgba(255, 46, 155, 0.58),
        rgba(255, 46, 155, 0) 55%
      ),
      radial-gradient(120% 140% at 10% 100%, rgba(46, 228, 196, 0.24), rgba(46, 228, 196, 0) 60%),
      var(--bg);
  }

  .hero--concept-a::after {
    background: linear-gradient(180deg, rgba(10, 10, 10, 0) 0%, rgba(10, 10, 10, 0.55) 100%);
  }

  .hero-shell .eyebrow {
    margin: 0;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    font-size: 0.78rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.7);
  }

  .hero h1 {
    margin: 0;
    max-width: 22ch;
    font-size: clamp(2.8rem, 6.5vw, 4.8rem);
    line-height: 1.05;
  }

  .hero h1 .hl-alt {
    background: linear-gradient(90deg, var(--accent) 0%, var(--accent-contrast) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    white-space: nowrap;
  }

  .hero p.lead {
    margin: 0;
    max-width: 60ch;
    color: rgba(255, 255, 255, 0.88);
  }

  .hero .actions {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero .actions .button {
    min-width: 180px;
  }

  @media (max-width: 640px) {
    .hero-shell {
      padding-top: clamp(4.5rem, 20vh, 6rem);
    }

    .hero-shell .eyebrow {
      letter-spacing: 0.22em;
      font-size: 0.72rem;
    }

    .hero h1 {
      font-size: clamp(2.4rem, 10vw, 3.4rem);
    }
  }
</style>
