<section id="hero" class="hero hero--concept-a">
  <div class="container hero-shell">
    <img
      src="/assets/fast-logo-white.svg"
      alt="Fast Events"
      class="logo logo--hero"
      width="320"
      height="80"
      decoding="async"
    />

    <h1 class="hero-title">
      We <span class="hl">accelerate</span> ideas into
      <span class="hl-alt">high-energy reality</span><span class="period">.</span>
    </h1>

    <p class="lead">
      Production, creative, and operations for bold, memorable brand experiences.
    </p>

    <div class="actions cta">
      <a class="button button--primary" href="#services">What we do</a>
      <a class="button button-ghost" href="#work">Our work</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100svh;
    display: grid;
    place-items: center;
    padding: 5rem 1.25rem 2.5rem;
    box-sizing: border-box;
    background: var(--bg);
  }

  .hero-shell {
    position: relative;
    z-index: 1;
    display: grid;
    gap: 1.15rem;
    justify-items: center;
    text-align: center;
  }

  .hero .logo--hero {
    max-width: min(340px, 60vw);
    height: auto;
  }

  .hero--concept-a {
    position: relative;
    overflow: hidden;
    color: var(--on-dark);
  }

  .hero--concept-a::before,
  .hero--concept-a::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .hero--concept-a::before {
    background: radial-gradient(
        140% 120% at 90% 10%,
        rgba(255, 46, 155, 0.58),
        rgba(255, 46, 155, 0) 55%
      ),
      radial-gradient(120% 140% at 10% 100%, rgba(46, 228, 196, 0.24), rgba(46, 228, 196, 0) 60%),
      var(--bg);
  }

  .hero--concept-a::after {
    background: linear-gradient(180deg, rgba(10, 10, 10, 0) 0%, rgba(10, 10, 10, 0.55) 100%);
  }

  .hero-shell .eyebrow {
    margin: 0;
    letter-spacing: 0.28em;
    text-transform: uppercase;
    font-size: 0.78rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.7);
  }

  .hero h1 {
    margin: 0;
    max-width: 22ch;
    font-size: clamp(2.2rem, 7vw + 0.6rem, 4.2rem);
    line-height: 1.08;
  }

  .hero h1 .hl-alt {
    background: linear-gradient(90deg, var(--accent) 0%, var(--accent-contrast) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    white-space: nowrap;
  }

  .hero p.lead {
    margin: 0;
    max-width: 60ch;
    font-size: clamp(1rem, 2.5vw + 0.6rem, 1.125rem);
    color: var(--text);
    opacity: 0.92;
  }

  .hero .actions {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.2rem;
  }

  .hero .actions .button {
    min-width: 180px;
  }

  @media (max-width: 640px) {
    .hero-shell .eyebrow {
      letter-spacing: 0.22em;
      font-size: 0.72rem;
    }
  }

  @media (max-width: 420px) {
    .hero {
      padding-top: 4.25rem;
    }

    .hero-shell {
      gap: 0.9rem;
    }

    .hero .logo--hero {
      max-width: min(300px, 62vw);
    }
  }
</style>
