---
import Image from "./Image.astro";

interface Props { project: any }
const { project } = Astro.props;
---
<article class="rounded overflow-hidden" style="background:var(--card)">
  <a href={`/projects/${project.slug}/`} aria-label={project.title}>
    <div class="w-full aspect-[4/3] overflow-hidden">
      <Image src={project.cover} alt={project.title} class="thumb w-full h-full object-cover" />
    </div>
    <div class="p-4">
      <h3 class="font-bold">{project.title}</h3>
      {project.client && <p class="text-sm" style="color:var(--muted)">{project.client}</p>}
      {Array.isArray(project.categories) && project.categories.length > 0 && <div class="flex flex-wrap gap-1 mt-2">
        {project.categories.map((c:any) => <span class="chip">{c}</span>)}
      </div>}
    </div>
  </a>
</article>
