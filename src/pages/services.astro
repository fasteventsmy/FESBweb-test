---
import Base from "../layouts/Base.astro";
import getServices from "../utils/getServices";
const services = getServices();
---
<Base title="Our Services â€” Fast Events">
  <section class="container py-10">
    <h1 class="text-3xl font-extrabold">Our Services</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 mt-6">
      {services.map((s:any) => (
        <article class="p-5 rounded" style="background:var(--card)">
          <h3 class="font-bold">{s.title}</h3>
          <ul class="list-disc ml-5 mt-2 text-sm" style="color:var(--muted)">
            {s.bullets.map((b:string) => <li>{b}</li>)}
          </ul>
        </article>
      ))}
    </div>
  </section>
</Base>
