---
import Base from "../layouts/Base.astro";

const theme = import.meta.env.PUBLIC_THEME ?? "not set";
const commitSha =
  import.meta.env.VERCEL_GIT_COMMIT_SHA ??
  import.meta.env.GITHUB_SHA ??
  "unknown";
const buildTime = new Date().toISOString();
---
<Base title="Debug">
  <section class="mx-auto max-w-2xl space-y-4 px-4 py-16">
    <h1 class="text-2xl font-bold">Deployment Debug Info</h1>
    <div class="space-y-2 text-sm">
      <p><strong>PUBLIC_THEME:</strong> {theme}</p>
      <p><strong>Commit SHA:</strong> {commitSha}</p>
      <p><strong>Build time:</strong> {buildTime}</p>
    </div>
  </section>
</Base>
