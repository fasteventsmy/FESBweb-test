---
import Base from "../layouts/Base.astro";
import getTeam from "../utils/getTeam";
import OrgChart from "../components/OrgChart.astro";
const people = getTeam();
const directors = people.filter((p:any) => /Director/i.test(p.role));
const rest = people.filter((p:any) => !/Director/i.test(p.role));
---
<Base title="About — Fast Events">
  <section class="container py-10">
    <h1 class="text-3xl font-extrabold">About Us</h1>
    <p class="mt-2 max-w-2xl" style="color:var(--muted)">We’re an end-to-end experiential team — strategy, creative, build and operations — focused on clarity, speed and craft.</p>
  </section>
  <section class="container py-6">
    <h2 class="text-2xl font-bold mb-3">Directors</h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
      {directors.map((p:any) => (
        <div class="p-4 rounded" style="background:var(--card)">
          {p.photo && <img src={p.photo} alt={p.name} class="w-16 h-16 rounded-full object-cover mb-3" />}
          <div class="font-semibold">{p.name}</div>
          <div class="text-sm" style="color:var(--muted)">{p.role}</div>
        </div>
      ))}
    </div>
  </section>
  <section class="container py-6">
    <h2 class="text-2xl font-bold mb-3">Organization</h2>
    <OrgChart people={rest} />
  </section>
</Base>
