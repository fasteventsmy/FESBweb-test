---
import Base from "../layouts/Base.astro";
import getProjects from "../utils/getProjects";
import WorkCard from "../components/WorkCard.astro";
const projects = getProjects().filter(p => p.status !== 'draft').slice(0,6);
---
<Base title="Fast Events — Home">
  <section class="container py-12">
    <h1 class="text-4xl md:text-5xl font-extrabold">High-impact experiences, built fast.</h1>
    <p class="mt-3 max-w-2xl" style="color:var(--muted)">We design, build, and run events that move people — from launches and roadshows to immersive brand worlds.</p>
    <div class="mt-6 flex gap-3">
      <a href="/work" class="px-4 py-2 rounded font-semibold" style="background:var(--brand-cta);color:black">See our work</a>
      <a href="/services" class="px-4 py-2 rounded font-semibold" style="background:color-mix(in oklab, var(--brand) 25%, transparent)">What we do</a>
    </div>
  </section>
  <section class="container py-8">
    <h2 class="text-2xl font-bold mb-4">Featured Projects</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
      {projects.map(p => <WorkCard project={p} />)}
    </div>
  </section>
  <section class="container py-12">
    <div class="rounded p-6" style="background:var(--card)">
      <h3 class="text-xl font-bold mb-2">Area of Coverage</h3>
      <p style="color:var(--muted)">We operate across Malaysia — explore our footprint.</p>
      <a href="/coverage" class="inline-block mt-3 underline">View the map →</a>
    </div>
  </section>
  <section class="container py-12">
    <h3 class="text-xl font-bold mb-2">Talk to us</h3>
    <p style="color:var(--muted)">Have a brief? Need a quick estimate? We’ll get back fast.</p>
    <a href="/contact" class="inline-block mt-3 px-4 py-2 rounded font-semibold" style="background:var(--brand-cta);color:black">Contact</a>
  </section>
</Base>
