---
import "../styles/base.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const themeMap = {
  a: "../styles/theme-concept-a.css",
  b: "../styles/theme-concept-b.css",
  c: "../styles/theme-concept-c.css",
} as const;

const urlTheme = Astro.url.searchParams.get("theme");
const envTheme = import.meta.env.PUBLIC_THEME;
const theme = (urlTheme ?? envTheme ?? "c").toLowerCase();

type ThemeKey = keyof typeof themeMap;

const isThemeKey = (value: string): value is ThemeKey =>
  Object.prototype.hasOwnProperty.call(themeMap, value);

const themeKey: ThemeKey = isThemeKey(theme) ? theme : "c";

const themeHref = themeMap[themeKey];

const { title = "Fast Events" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap"
    />
    <link
      rel="stylesheet"
      href={
        typeof Astro.resolve === "function" ? Astro.resolve(themeHref) : themeHref
      }
    />
  </head>
  <body>
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
