---
import "../styles/base.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const themeMap = {
  a: "../styles/theme-concept-a.css",
  b: "../styles/theme-concept-b.css",
  c: "../styles/theme-concept-c.css",
} as const;

const themeParam = Astro.url.searchParams.get("theme")?.toLowerCase();
const envTheme = import.meta.env.PUBLIC_THEME?.toLowerCase();

type ThemeKey = keyof typeof themeMap;

const isThemeKey = (value: string | undefined): value is ThemeKey =>
  typeof value === "string" &&
  Object.prototype.hasOwnProperty.call(themeMap, value);

const themeKey: ThemeKey =
  (isThemeKey(themeParam) && themeParam) ||
  (isThemeKey(envTheme) && envTheme) ||
  "b";

const themeHref = themeMap[themeKey];

const { title = "Fast Events" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href={
        typeof Astro.resolve === "function" ? Astro.resolve(themeHref) : themeHref
      }
    />
  </head>
  <body>
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
