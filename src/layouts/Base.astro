---
const THEME =
  import.meta.env.PUBLIC_THEME ??
  Astro.url.searchParams.get('theme') ??
  'b';

import "../styles/base.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title = "Fast Events" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>

    {THEME === 'a' && (
      <link rel="stylesheet" href={Astro.resolve("../styles/theme-concept-a.css")} />
    )}
    {THEME === 'b' && (
      <link rel="stylesheet" href={Astro.resolve("../styles/theme-concept-b.css")} />
    )}
    {THEME === 'c' && (
      <link rel="stylesheet" href={Astro.resolve("../styles/theme-concept-c.css")} />
    )}
  </head>
  <body style="background: var(--bg); color: var(--text); font-family: var(--font-sans);">
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
