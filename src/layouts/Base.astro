---
import "../styles/theme-concept-c.css";
import Header from "../components/Header.astro";
const { title = "Fast Events — High-impact experiences, built fast." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />

    <footer class="site-footer">
      <div class="container">
        <p style="opacity:.7">© {new Date().getFullYear()} Fast Events</p>
      </div>
    </footer>
  </body>
</html>
