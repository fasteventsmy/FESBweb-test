---
import "../styles/base.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title = "Fast Events" } = Astro.props;

const THEME_HREF_MAP = {
  a: "../styles/theme-concept-a.css",
  b: "../styles/theme-concept-b.css",
  c: "../styles/theme-concept-c.css",
} as const;

const astroWithResolve = Astro as typeof Astro & {
  resolve?: (specifier: string) => string;
};

if (typeof astroWithResolve.resolve !== "function") {
  astroWithResolve.resolve = (specifier) => specifier;
}

const themeParam = Astro.url.searchParams.get("theme");
const envTheme = import.meta.env.PUBLIC_THEME;

const isValidTheme = (value: string | null | undefined): value is keyof typeof THEME_HREF_MAP =>
  !!value && value in THEME_HREF_MAP;

const resolvedThemeKey = isValidTheme(themeParam)
  ? themeParam
  : isValidTheme(envTheme)
    ? envTheme
    : "b";

const themeHref = THEME_HREF_MAP[resolvedThemeKey];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href={Astro.resolve(themeHref)} />
  </head>
  <body>
    <Header />
    <main class="pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
