---
// Base layout – global wrapper.
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// ✅ Pull in Concept-C theme globally
import "../styles/theme-concept-c.css";

const { title = "Fast Events" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
